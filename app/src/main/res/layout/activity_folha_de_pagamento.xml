<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_folha_de_pagamento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="folhadepagamento.cursoandroid.com.folhadepagamento.FolhaDePagamentoActivity"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:text="Valor a receber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/pagamentoId"
        android:layout_below="@+id/calcularTotalId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Medium" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:id="@+id/valorSalarioId"
        android:background="@android:color/background_light" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/faltasMensaisId"
        android:background="@android:color/background_light"
        android:layout_below="@+id/horaExtraId"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/mesReferenteId"
        android:background="@android:color/background_light"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/faltasMensaisId"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Horas extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/horaExtraId"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:contextClickable="false"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:text="Mês referente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mesReferenteId"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:text="Faltas no mês"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignBaseline="@+id/faltasMensaisId"
        android:layout_alignBottom="@+id/faltasMensaisId"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Calcular valor do pagamento do funcionário"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calcularTotalId"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/mesReferenteId"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/horaExtraId"
        android:background="@android:color/background_light"
        android:layout_marginTop="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:text="Remuneração"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:id="@+id/textView6"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
